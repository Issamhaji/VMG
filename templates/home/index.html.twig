{% extends 'layout.html.twig' %}

{% block title %}Cars{% endblock %}

{% block content %}
    <div class="max-w-2xl mx-auto">
    
        <h1 class="text-3xl font-semibold mb-4">Car List</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for car in cars %}
                <div class="bg-white p-6 rounded-md shadow-md">
                    <a href="{{ url('app_car',{slug: car.slug}) }}"><h2 class="text-xl font-semibold mb-2">{{ car.brand }}</h2></a>
                    {% if availability[car.id] == false %}
                    <div class="flex flex-row justify-center items-center	">
                        <div class="availability-indicator bg-red-500 rounded-full w-8 h-8 flex items-center justify-center mt-4">
                            <span class="text-white"></span>
                        </div>
                        <p class="mt-2"><strong>Non Disponible</strong></p>
                    </div>
                    {% else %}
                        <div class="flex flex-row justify-center items-center	 ">
                            <div class="availability-indicator bg-green-500 rounded-full w-8 h-8 flex items-center justify-center mt-4">
                                <span class="text-white"></span>
                            </div>
                            <p class="mt-2 ml-2"><strong>Disponible</strong></p>
                        </div>
                    {% endif %}
                    <div class="text-center mt-5">
                    {% if availability[car.id] == true %}
                        <button class="inline-flex items-center justify-center w-full px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" 
                        type="button" 
                        >
                            <a href="{{ url('app_reservation',{slug: car.slug}) }}" >reserve</a>
                        </button>
                    {% else %}
                        <div class="text-center">
        <p class="text-red-500 font-bold">Car is reserved</p>
    </div>
                    {% endif %}
                    </div>


                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
