{% extends 'layout.html.twig' %}

{% block title %}Reserve a Car!{% endblock %}

{% block content %}
    <div class="flex items-center justify-center h-screen">
        <div class="max-w-md w-full p-6 bg-white rounded-md shadow-md">

            <h1 class="text-3xl font-semibold mb-6 text-center">Reserve a Car {{ car.brand }}</h1>
            <br>
            {% for label, messages in app.flashes %}
                <div class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4 my-4 rounded-md shadow">
                    {% for message in messages %}
                        <p class="text-orange-700">{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}

            {{ form_start(form) }}

            <div class="mb-4">
                {{ form_label(form.dateStart, 'Start Date and Time', {'class': 'block text-sm font-medium text-gray-700 mb-1'}) }}
                {{ form_widget(form.dateStart, {'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.dateEnd, 'End Date and Time', {'class': 'block text-sm font-medium text-gray-700 mb-1'}) }}
                {{ form_widget(form.dateEnd, {'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'}) }}
            </div>
            
            {% if form_errors(form) %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
        {% endif %}

            <div class="text-center">
                <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-300">
                    Reserve
                </button>
            </div>


            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
